{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "/*": [
        "./*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@common": [
        "src/common/index"
      ],
      "@common/*": [
        "src/common/*",
        "src/common/index"
      ],
      "@img/*": [
        "public/images/*"
      ],
      "@sty/*": [
        "src/assets/styles/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@api": [
        "src/api/index"
      ],
      "@api/*": [
        "src/api/*"
      ]
    }
  },
  "include": [
    "src",
    "electron",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
